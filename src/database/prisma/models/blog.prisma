// 在这里定义一个 Post 表
model Post {
  id          String   @id @default(uuid())
  thumbnail   String?
  title       String
  summary     String?
  content     String
  slug        String?  @unique
  keywords    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Prisma 模型名叫 Post，但映射到数据库里真正的表名叫 posts
  @@map("posts")
}
