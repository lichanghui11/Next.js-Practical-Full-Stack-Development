// 在这里定义一个 Post 表
model Post {
  id          String    @id @default(uuid())
  thumbnail   String?
  title       String
  summary     String?
  content     String
  slug        String?   @unique
  keywords    String?
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  // tags 和 posts 是多对多的关系，使用了 Prisma 的隐式多对多关系定义
  tags        Tag[]     @relation("post_to_tags")
  categoryId  String?
  // 这里表示在 Post 这个model 里使用 categoryId 这个字段存外键，
  // 外键就是 Category 这个 model 里的 id 字段
  category    Category? @relation(fields: [categoryId], references: [id])

  // Prisma 模型名叫 Post，但映射到数据库里真正的表名叫 posts
  @@map("posts")
}
